<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guillermo.obligatorio.Registro"
    android:background="@drawable/grafica">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textoNombre"
        android:text="Ingrese su
Nombre          "
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        />

    <EditText
        android:id="@+id/nombreRegistro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:hint="e.j. Brian"

        android:layout_toRightOf="@id/textoNombre"
        android:focusableInTouchMode="false"
        android:inputType="text"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textoApellido"

        android:text="Ingrese su
Apellido          "
        android:layout_below="@id/textoNombre"
        android:layout_alignParentLeft="true"

        />

    <EditText
        android:id="@+id/apellidoRegistro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/textoApellido"
        android:layout_weight="0"
        android:hint="e.j. Verdier"
        android:layout_below="@+id/nombreRegistro"
        android:inputType="text"
        android:focusableInTouchMode="false"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textoEmail"

        android:text="Ingrese su
Email               "
        android:layout_below="@id/textoApellido"
        android:layout_alignParentLeft="true">

    </TextView>

    <EditText
        android:id="@+id/emailRegistro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_toRightOf="@id/textoEmail"
        android:hint="e.j.brian@ejemplo.com"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/apellidoRegistro"

        android:focusableInTouchMode="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textoContraseña"

        android:text="Ingrese su
Contraseña     "
        android:layout_below="@id/textoEmail"
       >

    </TextView>

    <EditText
        android:id="@+id/contraseñaRegistro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:layout_below="@+id/emailRegistro"
        android:layout_toRightOf="@id/textoContraseña"
        android:focusableInTouchMode="false"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoContraseña"
        android:layout_centerHorizontal="true"
        android:text="Crear Cuenta"
        android:id="@+id/nuevaCuenta"

        />






</RelativeLayout>
